<matt.wltr.labs.flysightviewer.ui.TimezoneListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:alignItems="center"
    app:flexWrap="nowrap"
    app:justifyContent="space_between">

    <TextView
        android:id="@+id/timezone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <RadioButton
        android:id="@+id/timezone_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:clickable="false"
        android:focusable="false" />

</matt.wltr.labs.flysightviewer.ui.TimezoneListItemView>