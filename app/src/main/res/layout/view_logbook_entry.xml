<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logbook_entry_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/group_title"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:orientation="vertical"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:textColor="@color/text_highlight"
        android:textSize="@dimen/font_size_m"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/logbook_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="vertical"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:textAppearance="?android:attr/textAppearanceListItemSmall">

        <TextView
            android:id="@+id/logbook_entry_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_highlight"
            android:textSize="@dimen/font_size_m" />

        <TextView
            android:id="@+id/logbook_entry_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_s"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>